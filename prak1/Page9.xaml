<Page x:Class="prak1.Page9"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak1"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="800"
      Title="Page9">

    <Grid Background="#FFFFFEFE">
        <DataGrid x:Name="ProductDgr" Height="200" VerticalAlignment="Top" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding product_id}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding productName}" Header="Название изделия"/>
                <DataGridTextColumn Binding="{Binding productDescription}" Header="Описание продукта"/>
                <DataGridTextColumn Binding="{Binding price}" Header="Цена"/>
                <DataGridTextColumn Binding="{Binding Bakery.bakeryName}" Header="Название пекарни"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Назад" HorizontalAlignment="Left" Height="53" VerticalAlignment="Bottom" Width="113" FontSize="24" Background="#FFB24242" Foreground="#FFE2D7D7" Click="Button_Click"/>
    </Grid>
</Page>
